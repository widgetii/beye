#compile colorset.c
#compile dialogs.c
#compile editors.c
#compile events.c
#compile fileutil.c
#compile info_win.c
#compile mainloop.c
#compile refs.c
#compile search.c
#compile setup.c
#compile sysinfo.c
#compile tstrings.c

