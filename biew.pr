#compile %sysdepdir%\nls.c
#compile %sysdepdir%\os_dep.c
#compile %sysdepdir%\timer.c
#compile %sysdepdir%\vio.c

#link .\biewlib\libbiew.lib

--#pragma debug(vid=>full,line_num=>on)

